# ============================================
# CONFIGURATION PRODUCTION - SOBOA FOOT TIME
# ============================================
# Copier ce fichier vers .env.production et remplir les valeurs
# ============================================

# Base de données Production
DB_HOST=your-production-host.com
DB_PORT=3306
DB_DATABASE=soboa_foot_time
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Serveur SSH Production
PRODUCTION_SSH_HOST=your-server.com
PRODUCTION_SSH_USER=forge
PRODUCTION_PATH=/home/forge/soboa-foot-time
PRODUCTION_BRANCH=main

# Options de déploiement
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_BEFORE_SYNC=true
SYNC_MODE=safe  # full | safe | data
